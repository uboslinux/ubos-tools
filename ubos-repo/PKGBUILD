developer="http://indiecomputing.com/"
url="http://ubos.net/"
maintainer=$developer
pkgname=$(basename $(pwd))
pkgver=0.11
pkgrel=1
pkgdesc="UBOS package repository"
arch=('any')
license=('GPL')
install=install
depends=('rsync')

package() {
# Manifest
    mkdir -p ${pkgdir}/var/lib/ubos/manifests
    install -m0644 ${startdir}/ubos-manifest.json ${pkgdir}/var/lib/ubos/manifests/${pkgname}.json

# Data
    mkdir -p $pkgdir/var/lib/${pkgname}

# Code
    mkdir -p ${pkgdir}/usr/share/${pkgname}
    install -m0755 ${startdir}/index.php ${pkgdir}/usr/share/${pkgname}/

    mkdir -p ${pkgdir}/usr/share/${pkgname}/bin
    install -m0755 ${startdir}/bin/provision.pl ${pkgdir}/usr/share/${pkgname}/bin/
    install -m0755 ${startdir}/bin/safe-rsync.pl ${pkgdir}/usr/share/${pkgname}/bin/

# Tmpl
    mkdir -p ${pkgdir}/usr/share/${pkgname}/tmpl
    install -m644 ${startdir}/tmpl/htaccess.tmpl ${pkgdir}/usr/share/${pkgname}/tmpl/
}
