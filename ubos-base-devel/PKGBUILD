developer="http://indiecomputing.com/"
url="http://ubos.net/"
maintainer=$developer
pkgname=$(basename $(pwd))
pkgver=0.4
pkgrel=1
pkgdesc="Base development tools metapackage with some useful scripts"
arch=('any')
license=('AGPL3')
depends=(
    'binutils'
    'fakeroot'
    'file'
    'findutils'
    'gawk'
    'git'
    'gradle'
    'grep'
    'gzip'
    'java-environment-openjdk'
    'libtool'
    'm4'
    'make'
    'patch'
    'pkgconf'
    'python'
    'python-setuptools'
    'sed'
    'unzip'
    'which'
    'zip'

    'ubos-python-utils'
    'ubos-tools'
    'webapptest'
)

options=('!strip')

package() {
    install -D -m755 ${startdir}/bin/* -t ${pkgdir}/usr/share/${pkgname}/bin
}
