developer="http://indiecomputing.com/"
url="http://ubos.net/"
maintainer=$developer
pkgname=$(basename $(pwd))
pkgver=0.5
pkgrel=1
pkgdesc="UBOS tools to run on an Arch Linux development host"
arch=('any')
license=('AGPL3')
depends=(
    'pacsane'
    'ubos-check-packages'
    'ubos-install'
    'ubos-push'
    'git'
    'webapptest' )
options=('!strip')

package() {
    install -D -m755 ${startdir}/bin/* -t ${pkgdir}/usr/bin/
}

